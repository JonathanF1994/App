<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pure_software.partyapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txt_view_email"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:paddingTop="20dp"
        android:text="@string/login.username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:labelFor="@id/email"
        android:paddingTop="15dp" />

    <TextView
        android:id="@+id/txt_view_pass"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:paddingTop="30dp"
        android:text="@string/login.password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:ems="10"
        android:inputType="textPassword"
        android:labelFor="@id/password"
        android:paddingTop="15dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.34" />

    <TextView
        android:id="@+id/failed_login"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#e71313" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|bottom|right"
        android:layout_weight="0.07"
        android:background="#e17777"
        android:enabled="true"
        android:onClick="checkLogin"
        android:text="@string/login.login_btn" />


</LinearLayout>
